// this program will accept integer values for month, day, and year and then output the "long version" of the specified date.//
#include <iostream>
using namespace std;
int main ()

{
	int mm;
	int dd;
	int yyyy;
	cout<<"Please enter month number: ";
	cin>>mm;
	cout<<"Please enter date: ";
	cin>>dd;
	cout<<"Please enter year: ";
	cin>>yyyy;
	
	if (mm==1 && dd <=31 && yyyy >=1999 )
	cout <<"January" << "  "<< dd << " , " << yyyy << endl;
	else if (mm=1 && dd > 31  && yyyy < 1999)
	cout <<"Invalid date"<< endl;
			else if (mm=2 && dd <=28 && yyyy >= 1999)
			cout <<"February" << "  "<<dd << ", " << yyyy << endl;
			else if (mm=2 && dd >28 && yyyy <= 1999)
			cout <<"Invalid date"<< endl;
				else if (mm=3 && dd <=31 && yyyy >= 1999)
				cout <<"March" << "  "<<dd << ", " << yyyy << endl;
				else if (mm=3 && dd > 31  && yyyy < 1999)
				cout <<"Invalid date"<< endl;
					else if (mm=4 && dd <=30 && yyyy >= 1999)
					cout <<"March" << "  "<<dd << ", " << yyyy << endl;
					else if (mm=4 && dd > 30  && yyyy < 1999)
					cout <<"Invalid date"<< endl;
						else if (mm=5 && dd <=31 && yyyy >= 1999)
						cout <<"April" << "  "<<dd << ", " << yyyy << endl;
						else if (mm=5 && dd > 31  && yyyy < 1999)
						cout <<"Invalid date"<< endl;
							else if (mm=6 && dd <=30 && yyyy >= 1999)
							cout <<"June" << "  "<<dd << ", " << yyyy << endl;
							else if (mm=6 && dd > 30  && yyyy < 1999)
							cout <<"Invalid date"<< endl;
								else if (mm=7 && dd <=31 && yyyy >= 1999)
								cout <<"July" << "  "<<dd << ", " << yyyy << endl;
								else if (mm=7 && dd > 31  && yyyy < 1999)
								cout <<"Invalid date"<< endl;
									else if (mm=8 && dd <=31 && yyyy >= 1999)
									cout <<"June" << "  "<<dd << ", " << yyyy << endl;
									else if (mm=8 && dd > 31  && yyyy < 1999)
									cout <<"Invalid date"<< endl;
										else if (mm=9 && dd <=30 && yyyy >= 1999)
										cout <<"August" << "  "<<dd << ", " << yyyy << endl;
										else if (mm=9 && dd > 30  && yyyy < 1999)
										cout <<"Invalid date"<< endl;
											else if (mm=10 && dd <=31 && yyyy >= 1999)
											cout <<"October" << "  "<<dd << ", " << yyyy << endl;
											else if (mm=10 && dd > 31  && yyyy < 1999)
											cout <<"Invalid date"<< endl;
												else if (mm=11 && dd <=30 && yyyy >= 1999)
												cout <<"November" << "  "<<dd << ", " << yyyy << endl;
												else if (mm=11 && dd > 30  && yyyy < 1999)
												cout <<"Invalid date"<< endl;
													else if (mm=12 && dd <=31 && yyyy >= 1999)
													cout <<"December" << "  "<<dd << ", " << yyyy << endl;
													else if (mm=12 && dd > 31  && yyyy < 1999)
													cout <<"Invalid date"<< endl;
												
				else if (mm >12  && dd >= 31  && yyyy < 1999)
				cout <<"Invalid date"<< endl;
					else if (mm >12  && dd <= 31  && yyyy < 1999)
				cout <<"Invalid date"<< endl;
				
						
		
	return 0;
}
	
	
		
